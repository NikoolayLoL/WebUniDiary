@page
@model WebUniDiary.Pages.Admin.NewSpecialtyBook
@{
}

@Html.Partial("Admin/_ToolBar")

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Set up a new Specialty.</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">

                    <input type="text" class="form-control" id="Name" placeholder="Kn" asp-for="Name" required />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Description" >
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">SemesterCount</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="SemesterCount" placeholder="8" >
                </div>
            </div>

            <div class="row mb-3 justify-content-center mt-4">
                <div class="col-sm-5">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>