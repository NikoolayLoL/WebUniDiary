@page
@model WebUniDiary.Pages.Admin.AddCourseModel
@{
}

@Html.Partial("Admin/_ToolBar")

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4 bg-light shadow-sm">
        <h2 class="text-center mb-4">New Course</h2>

        @if (!string.IsNullOrEmpty(Model.failureMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.failureMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="mb-3 row">
                <label for="courseName" class="col-sm-2 col-form-label">Course Name</label>
                <div class="col-sm-10">
                    <input id="courseName" class="form-control" asp-for="CourseDto.Name" placeholder="Enter course name" />
                </div>
            </div>

            <div class="mb-3 row">
                <label for="courseDescription" class="col-sm-2 col-form-label">Course Description</label>
                <div class="col-sm-10">
                    <textarea id="courseDescription" class="form-control" asp-for="CourseDto.Description" placeholder="Enter course description"></textarea>
                </div>
            </div>

            <div class="mb-3 row">
                <label for="teacherID" class="col-sm-2 col-form-label">Assign Teacher</label>
                <div class="col-sm-10">
                    <input id="teacherID" class="form-control" asp-for="CourseDto.TeacherID" placeholder="Enter teacher ID" />
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-6 d-grid">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                <div class="col-sm-6 d-grid">
                    <a class="btn btn-outline-secondary btn-block" href="/" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>