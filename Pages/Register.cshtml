@page
@model WebUniDiary.Pages.RegisterModel
@{
}

<style>
    body, html {
        height: 100%;
        margin: 0;
    }

    .full-height {
        height: 100vh;
    }
</style>

<div class="container full-height d-flex align-items-center justify-content-center">
    <div class="col-md-6 mx-auto rounded border p-4 shadow-sm">
        <h2 class="text-center mb-4">New User</h2>

        @if (!string.IsNullOrEmpty(Model.failureMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.failureMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UserDto.Email" type="email" />
                    <span asp-validation-for="UserDto.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UserDto.Password" type="password" />
                    <span asp-validation-for="UserDto.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Role TEST ONLY</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="UserDto.Role">
                        <option value="Student">Student</option>
                        <option value="Teacher">Teacher</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3 justify-content-center mt-4">
                <div class="col-sm-6 mb-2">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="d-grid">
                        <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
